<Window x:Class="KDZ.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KDZ"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Password"  Height="124" Width="300">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Enter the password:" Height="28" VerticalAlignment="Center" Margin="0,-35,0,0"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="20" TextWrapping="Wrap" VerticalAlignment="Center" Width="204" Margin="0,0,0,0"/>
        <Button x:Name="button" Content="Confirm" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,55,50,0" Width="75" Click="button_Click"/>
        <Button x:Name="buttonback" Content="Return" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50,55,0,0" Width="75" Click="buttonback_Click"/>

    </Grid>
</Window>
