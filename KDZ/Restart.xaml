<Window x:Class="KDZ.Restart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KDZ"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Restart" Height="124" Width="300">
    <Grid>
        <Button x:Name="buttonNo" Content="No" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Margin="170,30,0,0" Click="buttonNo_Click"/>
        <Button x:Name="buttonYes" Content="Yes" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75"  Margin="-170,30,0,0" Click="buttonYes_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Would you like to use the old data?" VerticalAlignment="Center" Height="28" Width="197" Margin="0,-20,0,0"/>
        <Button x:Name="button" Content="Return" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0" Width="75" Click="button_Click"/>

    </Grid>
</Window>
